
mixin header-menu(json)
  .header-menu
    each data in json
      a.header-menu-link(href=`${data.link}`) #{data.name}
mixin header-products(json)
  each item,key in json
    .header-product-item
      .header-product-text
        a.header-product-title #{item.name}
        each link in item.sub
          a.header-product-link #{link}
        if (item.link)
          +link("header-product-select") #{item.link}
      .header-product-img
        img(src=`images/category-${key+1}.png`)

.header
  .content
    .header-product
      .header-product-but
        span.header-product-open продукция
        span.header-product-close закрыть
      .header-product-content
        +header-products(getData('product/category'))
    .header-search#header-search
      .header-search-but(data-toggle="header-search")
        +icon('search' , 'svg')
      .header-search-content.content
        form(action="")
          input(type="text" name='s' placeholder="Что вы хотите найти?")
          button(type='submit')
            +link('gray')
              |Найти
        .header-search-close(data-toggle="header-search")
    a.header-logo
      img(src="images/logo.png" alt="")
      .header-logo-strs
        span
        span
        span
        span
    +header-menu(getData('menu'))