mixin footer-menu(json)
  .footer-menu
    each data in json
      a.footer-menu-link(href=`${data.link}`) #{data.name}
    a.footer-menu-link(href="blog.html") Блог
mixin footer-cats(json)
  each item,key in json
    .footer-cats-item
      a.footer-cats-title #{item.name}
      .footer-cats-links
        each link in item.sub
          a.footer-cats-link #{link}
