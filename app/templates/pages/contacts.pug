extends ../layouts/default.pug

block variables
  -var pageTitle='Контакты'

block content
  .contacts-head.content
    .contacts-head-img
      img(src="images/bg-blog.png" alt="")
    .contacts-head-title.section-title
      .show-item.showInLeft(data-group='contacts-head') Контакты
    .contacts-head-content
      a.footer-phone(href="tel:8 495 995–­­90–35")
        .show-item.showInRight(data-group='contacts-head') 8 495 995–­­90–35
      .footer-loc.show-item.showInRight(data-group='contacts-head')
        span Московская область, Люберецкий р-н, пос.Октябрьский, ул.Фабричная, ГАС
