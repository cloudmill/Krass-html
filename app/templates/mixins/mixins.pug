mixin icon(iconName, type = 'png')
    if(type == 'png')
        i(class='icon '+'icon-'+iconName)
    else
        i(class='svg-icon '+'svg-'+iconName)


mixin link(className)
  div(class="main-link "+className)
    block
    +icon('str-link','svg')
