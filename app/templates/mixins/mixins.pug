mixin icon(iconName, type = 'png')
  if(type == 'png')
    i(class='icon '+'icon-'+iconName)
  else
    i(class='svg-icon '+'svg-'+iconName)


mixin link(className,href)
  a(class=className href=href).main-link
    block
    +icon('str-link','svg')
    .main-link-circle
      svg( viewBox="0 0 56 59" xmlns="http://www.w3.org/2000/svg")
        circle
mixin submit()
  button.field-submit.main-link(type='submit')
    block
    +icon('str-link','svg')
    .main-link-circle
      svg( viewBox="0 0 56 59" xmlns="http://www.w3.org/2000/svg")
        circle


mixin bigLink(className,href)
  a(class=className href=href ).big-link
    .big-link-bg
      span
    .big-link-mask
      span
        block
      span
        block
      span
        block
    +icon('str-big-link-inside','svg')


mixin slider(classSlider, pagination,navigation,scrollbar)
  div(class=classSlider).swiper-container
    .swiper-wrapper
      block
    if(pagination)
      .swiper-pagination
    if(navigation)
      .swiper-button-prev
      .swiper-button-next
    if(scrollbar)
      .swiper-scrollbar

mixin fieldSelect(id,name,values)
  .field.field-select
    label(for=id)
      span.name Выберите свой регион
      select(name=name id=id)
        each val in values
          option(value=val[0]) #{val[1]}

mixin fieldBase(id,name,placeholder)
  .field.field-base
    label(for=id)
      input(type="text" name=name id=id data-required='1')
      .field-inf
        span.name #{placeholder}
        span.line
        span.errorText пожалуйста, заполните поле корректно
mixin fieldCheck(id,name)
  .field.field-check
    label(for=id)
      input(type="checkbox" name=name id=id data-required='1')
      span
        block
